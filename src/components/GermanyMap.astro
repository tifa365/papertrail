<style>
  html,
  body {
    height: 100%;
    margin: 0;
  }

  #map {
    width: 100%;
    height: 800px !important;
    max-height: 800px !important;
    overflow: hidden !important;
    background-color: white;
    padding: 20px 0; /* Add vertical padding to give space for popups */
  }

  /* Hide zoom controls */
  .leaflet-control-zoom {
    display: none !important;
  }

  /* Remove border */
  .map-container {
    border: none !important;
    height: 800px !important;
    max-height: 800px !important;
    overflow: hidden !important;
  }

  /* Map with legend layout */
  .map-with-legend {
    position: relative;
    width: 100%;
    height: 100%;
  }

  /* Mobile legend container - hidden on desktop */
  .mobile-legend-container {
    display: none;
  }

  /* Legend styling */
  .map-legend {
    position: absolute;
    top: 20px;
    left: 20px;
    z-index: 1000;
    background-color: white;
    padding: 12px;
    border-radius: 6px;
    box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
    max-width: 180px;
    font-size: 0.85rem;
  }

  .legend-title {
    font-weight: bold;
    margin-bottom: 8px;
    font-size: 0.9rem;
  }

  .map-legend .legend-item {
    display: flex;
    align-items: center;
    margin-bottom: 6px;
  }

  .map-legend .color-box {
    width: 16px;
    height: 16px;
    margin-right: 8px;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    #map {
      height: 400px !important;
      max-height: 400px !important;
    }
    
    .map-container {
      height: 400px !important;
      max-height: 400px !important;
    }
    
    /* Show mobile legend, hide desktop legend */
    .mobile-legend-container {
      display: block !important;
      margin-bottom: 10px;
    }
    
    .desktop-legend {
      display: none !important;
    }
    
    /* Mobile legend styling */
    .mobile-legend-container .map-legend {
      position: relative !important;
      top: 0 !important;
      left: 0 !important;
      width: 100% !important;
      max-width: none !important;
      margin-bottom: 0;
      padding: 8px;
      font-size: 0.75rem;
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 6px;
    }
    
    .mobile-legend-container .legend-title {
      font-size: 0.8rem;
      margin-bottom: 0;
      margin-right: 8px;
      flex-shrink: 0;
    }
    
    .mobile-legend-container .legend-item {
      margin-bottom: 0;
      margin-right: 6px;
      display: flex;
      align-items: center;
      flex-shrink: 0;
    }
    
    .mobile-legend-container .color-box {
      width: 12px;
      height: 12px;
      margin-right: 4px;
    }
  }

  @media (max-width: 480px) {
    #map {
      height: 300px !important;
      max-height: 300px !important;
    }
    
    .map-container {
      height: 300px !important;
      max-height: 300px !important;
    }
  }
</style>
