<style>
  html,
  body {
    height: 100%;
    margin: 0;
  }

  #map {
    width: 100%;
    height: 560px !important;
    max-height: 560px !important;
    overflow: visible !important;
    background-color: white;
    padding: 20px 0; /* Add vertical padding to give space for popups */
  }

  /* Hide zoom controls */
  .leaflet-control-zoom {
    display: none !important;
  }

  /* Remove border */
  .map-container {
    border: none !important;
    height: 560px !important;
    max-height: 560px !important;
    overflow: visible !important;
  }

  /* Map with legend layout */
  .map-with-legend {
    position: relative;
    width: 100%;
    height: 100%;
  }

  /* Desktop legend overlay (positioned over map) */
  .legend-overlay {
    position: absolute;
    top: 20px;
    left: 20px;
    z-index: 1000;
    display: block;
  }

  /* Mobile legend below map (hidden on desktop) */
  .legend-below-map {
    margin-top: 10px;
    display: none;
    justify-content: center;
  }

  /* Legend styling */
  .map-legend {
    position: relative;
    background-color: white;
    padding: 12px;
    border-radius: 6px;
    box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
    border: 1px solid #e0e0e0;
    display: inline-block;
    font-size: 0.85rem;
  }

  .legend-title {
    font-weight: bold;
    margin-bottom: 8px;
    font-size: 0.9rem;
  }

  .map-legend .legend-item {
    display: flex;
    align-items: center;
    margin-bottom: 6px;
  }

  .map-legend .color-box {
    width: 16px;
    height: 16px;
    margin-right: 8px;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    #map {
      height: 400px !important;
      max-height: 400px !important;
    }
    
    .map-container {
      height: 400px !important;
      max-height: 400px !important;
    }
    
    /* Hide desktop legend overlay on mobile */
    .legend-overlay {
      display: none !important;
    }
    
    /* Show mobile legend below map */
    .legend-below-map {
      display: flex !important;
    }
    
    /* Mobile legend styling - horizontal layout */
    .map-legend {
      padding: 8px;
      font-size: 0.75rem;
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 6px;
      max-width: 100%;
    }
    
    .legend-title {
      font-size: 0.8rem;
      margin-bottom: 0;
      margin-right: 8px;
      flex-shrink: 0;
    }
    
    .map-legend .legend-item {
      margin-bottom: 0;
      margin-right: 6px;
      display: flex;
      align-items: center;
      flex-shrink: 0;
    }
    
    .map-legend .color-box {
      width: 12px;
      height: 12px;
      margin-right: 4px;
    }
  }

  @media (max-width: 480px) {
    #map {
      height: 300px !important;
      max-height: 300px !important;
    }
    
    .map-container {
      height: 300px !important;
      max-height: 300px !important;
    }
  }
  
  /* Desktop only: Fix whitespace by preventing map expansion */
  @media (min-width: 769px) {
    #map {
      overflow: hidden !important;
    }
    
    .map-container {
      overflow: hidden !important;
    }
  }
</style>
