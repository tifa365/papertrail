<script is:inline define:vars={{ basePath: import.meta.env.BASE_URL }}>
  window.BASE_PATH = basePath;
  const script1 = document.createElement('script');
  script1.src = basePath + 'geodata.js';
  document.head.appendChild(script1);

  script1.onload = () => {
    const script2 = document.createElement('script');
    script2.src = basePath + 'minimal-choropleth.js';
    document.head.appendChild(script2);
  };
</script>

<style>
  html,
  body {
    margin: 0;
  }

  #map {
    width: 100%;
    height: 560px;
    max-height: 560px;
    min-height: 560px;
    background-color: white;
    padding: 0;
    margin: 0;
    position: relative;
    /* No z-index - let panes manage their own z-index globally */
  }

  /* Hide zoom controls */
  .leaflet-control-zoom {
    display: none !important;
  }

  /* Force all popup-related elements to appear above legend */
  .leaflet-popup-pane,
  .leaflet-pane[class*="popup"],
  .leaflet-popup,
  .leaflet-popup-content-wrapper,
  .leaflet-popup-tip-container {
    z-index: 999999 !important;
  }

  /* Remove border */
  .map-container {
    border: none;
    height: 560px;
    max-height: 560px;
    min-height: 560px;
    padding: 0;
    margin: 0;
    position: relative;
    /* Ensure this doesn't create a stacking context */
    isolation: auto;
  }

  /* Map with legend layout */
  .map-with-legend {
    position: relative;
    width: 100%;
    height: 100%;
    /* Ensure this doesn't create a stacking context */
    isolation: auto;
  }

  /* Desktop legend overlay (positioned over map) */
  .legend-overlay {
    position: absolute;
    top: 20px;
    left: 120px;
    z-index: 400;  /* Above map base, but popups will appear higher */
    display: block;
    pointer-events: none;  /* Allow clicks to pass through to map */
  }

  /* Allow clicks on legend content */
  .legend-overlay .map-legend {
    pointer-events: auto;
  }

  /* Mobile legend below map (hidden on desktop) */
  .legend-below-map {
    margin-top: 10px;
    display: none;
    justify-content: center;
  }

  /* Legend styling */
  .map-legend {
    position: relative;
    background-color: white;
    padding: 12px;
    border-radius: 6px;
    box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
    border: 1px solid #e0e0e0;
    display: inline-block;
    font-size: 0.85rem;
  }

  .legend-title {
    font-weight: bold;
    margin-bottom: 8px;
    font-size: 0.9rem;
  }

  .map-legend .legend-item {
    display: flex;
    align-items: center;
    margin-bottom: 6px;
  }

  .map-legend .color-box {
    width: 16px;
    height: 16px;
    margin-right: 8px;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    #map {
      height: 400px !important;
      max-height: 400px !important;
    }
    
    .map-container {
      height: 400px !important;
      max-height: 400px !important;
    }
    
    /* Hide desktop legend overlay on mobile */
    .legend-overlay {
      display: none !important;
    }
    
    /* Show mobile legend below map */
    .legend-below-map {
      display: flex !important;
    }
    
    /* Mobile legend styling - horizontal layout */
    .map-legend {
      padding: 8px;
      font-size: 0.75rem;
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 6px;
      max-width: 100%;
    }
    
    .legend-title {
      font-size: 0.8rem;
      margin-bottom: 0;
      margin-right: 8px;
      flex-shrink: 0;
    }
    
    .map-legend .legend-item {
      margin-bottom: 0;
      margin-right: 6px;
      display: flex;
      align-items: center;
      flex-shrink: 0;
    }
    
    .map-legend .color-box {
      width: 12px;
      height: 12px;
      margin-right: 4px;
    }
  }

  @media (max-width: 480px) {
    #map {
      height: 300px !important;
      max-height: 300px !important;
    }
    
    .map-container {
      height: 300px !important;
      max-height: 300px !important;
    }
  }
  
  /* Allow popups to overflow - critical for visibility! */
  .map-container, #map, .leaflet-container {
    /* overflow: hidden; */ /* REMOVED - clips popups! */
    position: relative;
    display: block;
    /* contain: layout paint; */ /* REMOVED - also clips overflow */
  }

  /* Don't clip Leaflet's internal panes - popups need to overflow */
  #map .leaflet-pane,
  #map .leaflet-map-pane,
  #map .leaflet-tile-pane,
  #map .leaflet-overlay-pane,
  #map .leaflet-marker-pane,
  #map .leaflet-shadow-pane {
    /* overflow: hidden; */ /* REMOVED - clips popups! */
    /* contain: layout paint; */ /* REMOVED - clips overflow */
  }

  /* Prevent img/canvas baseline whitespace changes after fonts/images load */
  .leaflet-container img,
  .leaflet-container canvas,
  .leaflet-container svg {
    display: block;
  }
</style>
