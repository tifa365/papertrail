<div class="map-container">
  <div class="map-with-legend">
    <div class="map-legend">
      <div class="legend-title">Legende</div>
      <div class="legend-item">
        <div class="color-box" style="background-color: #8B0000;"></div>
        <span>5+ Zeitungen</span>
      </div>
      <div class="legend-item">
        <div class="color-box" style="background-color: #B22222;"></div>
        <span>4 Zeitungen</span>
      </div>
      <div class="legend-item">
        <div class="color-box" style="background-color: #DC143C;"></div>
        <span>3 Zeitungen</span>
      </div>
      <div class="legend-item">
        <div class="color-box" style="background-color: #FF4500;"></div>
        <span>2 Zeitungen</span>
      </div>
      <div class="legend-item">
        <div class="color-box" style="background-color: #FF7F50;"></div>
        <span>1 Zeitung</span>
      </div>
    </div>
    <div id="map" class="germany-map"></div>
  </div>
</div>

<script is:inline src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
></script>
<link
  rel="stylesheet"
  href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
/>
<script is:inline src="/geodata.js"></script>
<script is:inline src="/minimal-choropleth.js"></script>

<style>
  html,
  body {
    height: 100%;
    margin: 0;
  }

  #map {
    width: 100%;
    height: 100%;
    background-color: white;
  }

  /* Hide zoom controls */
  .leaflet-control-zoom {
    display: none !important;
  }

  /* Remove border */
  .map-container {
    border: none !important;
  }

  /* Map with legend layout */
  .map-with-legend {
    position: relative;
    width: 100%;
    height: 100%;
  }

  /* Legend styling */
  .map-legend {
    position: absolute;
    top: 20px;
    left: 20px;
    z-index: 1000;
    background-color: white;
    padding: 12px;
    border-radius: 6px;
    box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
    max-width: 180px;
    font-size: 0.85rem;
  }

  .legend-title {
    font-weight: bold;
    margin-bottom: 8px;
    font-size: 0.9rem;
  }

  .map-legend .legend-item {
    display: flex;
    align-items: center;
    margin-bottom: 6px;
  }

  .map-legend .color-box {
    width: 16px;
    height: 16px;
    margin-right: 8px;
  }
</style>
